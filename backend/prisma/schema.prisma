generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String

  rights AdminRole[] @default([PART])

  createdEvents Event[]

  @@map("admins")
}

enum AdminRole {
  PART
  FULL
}

model User {
  id                String   @id @default(cuid())
  telegramId        String   @unique @map("telegram_id")
  telegramUsername  String   @unique @map("telegram_username")
  telegramFirstName String?
  telegramLastName  String?
  createdAt         DateTime @default(now()) @map("created_at")

  nickname     String?
  userCategory UserCategory @default(SchoolFrom9to11) @map("user_category")
  yearOfBirth  Int?         @map("year_of_birth")

  events   Event[]
  Feedback Feedback[]

  photoUrl String? @map("photo_url")

  @@map("users")
}

model Event {
  id String @id @default(cuid())

  image       EventImage? @relation("Event Avatar")
  title       String
  description String
  hashTags    String[]

  //Dates>
  createdAt DateTime @default(now()) @map("created_at")
  eventDate DateTime @map("event_date")
  eventTime String   @map("event_time")
  //<Dates

  administrator Admin  @relation(fields: [adminId], references: [id])
  adminId       String @map("administrator_id")

  feedback     Feedback[]
  participants User[]
}

model EventImage {
  id   String @id @default(cuid())
  path String

  createdAt DateTime @default(now())

  event   Event  @relation("Event Avatar", fields: [eventId], references: [id])
  eventId String @unique @map("event_id")
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  rating  Int     @default(5)
  comment String?

  event       Event  @relation(fields: [eventId], references: [id])
  eventId     String @map("event_id")
  commentator User   @relation(fields: [userId], references: [id])
  userId      String @map("user_id")
}

enum UserCategory {
  SchoolBefore9
  SchoolFrom9to11
  Student
}
